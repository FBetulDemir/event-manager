{
    "compilerOptions": {
        "target": "es2016",
        "module": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@components/*": ["components/*"],
            "@assets/*": ["assets/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
